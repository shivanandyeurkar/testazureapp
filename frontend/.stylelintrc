{
  "extends": ["stylelint-scss", "stylelint-config-recommended"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extends",
          "ignores",
          "function",
          "if",
          "each",
          "include",
          "mixin",
          "else",
          "in"
        ]
      }
    ],
    "indentation": 2,
    "unit-allowed-list": ["em", "rem", "s", "%", "px", "vh", "deg", "vmin", "ms"],
    "block-closing-brace-newline-after": [
      "always",
      {
        "ignoreAtRules": ["if", "else"]
      }
    ],
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": ["map-get", "darken", "lighten"]
      }
    ]
  }
}
